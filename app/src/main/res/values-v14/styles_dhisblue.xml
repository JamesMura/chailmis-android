<resources>

    <style name="Theme.Dhisblue" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_dhisblue</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Dhisblue</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Dhisblue</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Dhisblue</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Dhisblue</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Dhisblue</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_dhisblue</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_dhisblue</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Dhisblue</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Dhisblue.Widget</item>

    </style>

    <style name="ActionBar.Solid.Dhisblue" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_dhisblue</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dhisblue</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dhisblue</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Dhisblue</item>
    </style>

    <style name="ActionBar.Transparent.Dhisblue" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_dhisblue</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Dhisblue</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Dhisblue.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Dhisblue</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Dhisblue</item>
    </style>

</resources>