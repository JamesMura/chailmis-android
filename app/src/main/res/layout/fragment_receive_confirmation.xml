<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="400dp"
    android:layout_gravity="center_horizontal|top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/dialogButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/button_receive_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/confirm" />

            <Button
                android:id="@+id/button_receive_go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/button_receive_confirm"
                android:text="@string/go_back" />

        </RelativeLayout>

        <ListView
            android:id="@+id/listViewConfirmReceive"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/dialogButtons" />

    </RelativeLayout>

</LinearLayout>