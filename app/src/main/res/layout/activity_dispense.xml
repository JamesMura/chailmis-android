<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    tools:context="org.clintonhealthaccess.lmis.app.activities.DispenseActivity">

    <ScrollView
        android:id="@+id/scrollCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:id="@+id/layoutCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_header"
                android:padding="10dp"
                android:text="@string/categories"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/layoutSelectedItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/scrollCategories"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/gray_header"
                android:padding="10dp"
                android:text="@string/dispense"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPrescriptionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewPrescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textViewPrescriptionId"
                android:padding="10dp"
                android:text="@string/prescription"
                android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingTop="10dp">


            <CheckBox
                android:id="@+id/checkboxDispenseToFacility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/dispense_to_facility" />

            <Button
                android:id="@+id/buttonSubmitDispense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="@string/submit"
                android:visibility="invisible" />

            <GridView
                android:id="@+id/gridViewSelectedCommodities"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/buttonSubmitDispense"
                android:layout_below="@id/checkboxDispenseToFacility"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:numColumns="1"
                android:stretchMode="columnWidth"
                android:verticalSpacing="7dp" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
