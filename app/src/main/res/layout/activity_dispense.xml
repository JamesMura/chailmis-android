<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="15dp"
    tools:context="org.clintonhealthaccess.lmis.app.activities.DispenseActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/layoutCategories">

        <TextView
            android:background="@color/gray_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/categories"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:id="@+id/layoutSelectedItems"
        android:layout_toRightOf="@id/layoutCategories">

        <TextView
            android:background="@color/gray_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/dispense"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkboxDispenseToFacility"
                android:layout_width="wrap_content"
                android:text="@string/dispense_to_facility"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ListView
            android:layout_width="wrap_content"

            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/listViewSelectedCommodities" />
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/submit"
        android:id="@+id/buttonSubmitDispense"
        android:padding="20dp"
        android:layout_below="@id/layoutSelectedItems"
        android:layout_alignParentRight="true" />
</RelativeLayout>
