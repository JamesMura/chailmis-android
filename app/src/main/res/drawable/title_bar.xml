<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/m_dark_grey" />
            <gradient android:angle="90"
                android:startColor="@color/m_dark_grey"
                android:endColor="@color/white"/>
        </shape>
    </item>
    <item
        android:top="2dp"
        android:bottom="1dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/m_light_grey" />
        </shape>
    </item>
</layer-list>