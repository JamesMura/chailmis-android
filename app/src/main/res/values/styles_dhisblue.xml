<resources>

    <style name="Theme.Dhisblue" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_dhisblue</item>
        <item name="popupMenuStyle">@style/PopupMenu.Dhisblue</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Dhisblue</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Dhisblue</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Dhisblue</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Dhisblue</item>
        <item name="actionModeBackground">@drawable/cab_background_top_dhisblue</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_dhisblue</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Dhisblue</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Dhisblue.Widget</item>

    </style>

    <style name="ActionBar.Solid.Dhisblue" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_dhisblue</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_dhisblue</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_dhisblue</item>
        <item name="progressBarStyle">@style/ProgressBar.Dhisblue</item>
    </style>

    <style name="ActionBar.Transparent.Dhisblue" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_dhisblue</item>
        <item name="progressBarStyle">@style/ProgressBar.Dhisblue</item>
    </style>
	
    <style name="PopupMenu.Dhisblue" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dhisblue</item>	
    </style>
	
    <style name="DropDownListView.Dhisblue" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_dhisblue</item>
    </style>

    <style name="ActionBarTabStyle.Dhisblue" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_dhisblue</item>
    </style>
	
    <style name="DropDownNav.Dhisblue" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_dhisblue</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dhisblue</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_dhisblue</item>
    </style>
    
    <style name="ProgressBar.Dhisblue" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_dhisblue</item>
    </style>
    
    <style name="ActionButton.CloseMode.Dhisblue" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_dhisblue</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Dhisblue.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Dhisblue</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Dhisblue</item>
    </style>

</resources>